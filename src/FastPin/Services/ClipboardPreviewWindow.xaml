<Window x:Class="FastPin.Services.ClipboardPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:FastPin.Converters"
        xmlns:models="clr-namespace:FastPin.Models"
        Title="Clipboard Preview" 
        Height="350" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        MouseLeave="Window_MouseLeave">
    
    <Border Background="{StaticResource SurfaceBrush}" 
            BorderBrush="{StaticResource PrimaryBrush}" 
            BorderThickness="2" 
            CornerRadius="8" 
            Padding="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="{conv:Localize ClipboardPreview}" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource PrimaryBrush}"
                       Margin="0,0,0,10"/>

            <!-- Content Preview -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                <Grid>
                    <!-- Text Preview -->
                    <TextBlock Text="{Binding ClipboardPreviewText}" 
                               TextWrapping="Wrap" 
                               FontSize="13"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Visibility="{Binding ClipboardPreviewType, Converter={StaticResource ItemTypeToVisibilityConverter}, ConverterParameter=Text}"/>

                    <!-- Image Preview -->
                    <Grid Visibility="{Binding ClipboardPreviewType, Converter={StaticResource ItemTypeToVisibilityConverter}, ConverterParameter=Image}">
                        <Image Source="{Binding ClipboardPreviewImageSource}" 
                               Stretch="Uniform"
                               HorizontalAlignment="Center"/>
                    </Grid>

                    <!-- File Preview -->
                    <Grid Visibility="{Binding ClipboardPreviewType, Converter={StaticResource ItemTypeToVisibilityConverter}, ConverterParameter=File}">
                        <TextBlock Text="[File Preview]" 
                                   FontSize="13" 
                                   FontStyle="Italic"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Grid>

                    <!-- No Content -->
                    <TextBlock Text="{conv:Localize NoClipboardContent}" 
                               FontSize="13" 
                               FontStyle="Italic"
                               Foreground="{StaticResource TextSecondaryBrush}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ClipboardPreviewType}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </ScrollViewer>

            <!-- Tag Selection -->
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Selected Tags Display -->
                <ItemsControl Grid.Row="0" ItemsSource="{Binding PreviewItemTags}" Margin="0,0,0,5">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Pinterest-style tag: rounded pill with shadow -->
                            <Border CornerRadius="12" 
                                    Padding="10,5" 
                                    Margin="0,0,6,6"
                                    Background="White"
                                    BorderThickness="0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" 
                                                      ShadowDepth="2" 
                                                      Opacity="0.2" 
                                                      Direction="270"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal">
                                    <!-- Tag color indicator -->
                                    <Ellipse Width="8" 
                                             Height="8" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,6,0">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="{Binding Color, TargetNullValue=#0078D4}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="11" 
                                               FontWeight="Medium"
                                               Foreground="#333333"
                                               VerticalAlignment="Center"/>
                                    <Button Content="âœ•"
                                            Command="{Binding DataContext.RemovePreviewTagCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding Name}"
                                            FontSize="10"
                                            Foreground="#999999"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Margin="6,0,0,0"
                                            Padding="2"
                                            Width="16" Height="16"
                                            Cursor="Hand"
                                            VerticalAlignment="Center">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                        <Setter Property="Foreground" Value="#333333"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Add Tag Section -->
                <Grid Grid.Row="1" Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Grid.Column="0"
                              Text="{Binding PreviewNewTagName, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding AllTags}"
                              IsEditable="True"
                              FontSize="11"
                              Padding="6,4"
                              Margin="0,0,5,0">
                        <ComboBox.InputBindings>
                            <KeyBinding Key="Enter" 
                                        Command="{Binding AddPreviewTagCommand}"/>
                        </ComboBox.InputBindings>
                    </ComboBox>
                    <TextBlock Grid.Column="0" 
                               Text="{conv:Localize AddTag}" 
                               Margin="8,0,0,0" 
                               VerticalAlignment="Center"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PreviewNewTagName}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding PreviewNewTagName}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Button Grid.Column="1"
                            Content="+"
                            Command="{Binding AddPreviewTagCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#008272"
                            Width="30"
                            Padding="0"
                            FontSize="16"
                            FontWeight="Bold"/>
                </Grid>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="{conv:Localize Pin}" 
                        Command="{Binding PinClipboardCommand}"
                        Click="PinButton_Click"
                        Padding="15,6"
                        Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                            <Setter Property="IsEnabled" Value="True"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ClipboardPreviewType}" Value="{x:Null}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="{conv:Localize Discard}" 
                        Command="{Binding DiscardClipboardCommand}"
                        Click="DiscardButton_Click"
                        Style="{StaticResource ModernButtonStyle}"
                        Background="#666666"
                        Padding="15,6"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
