<Window x:Class="FastPin.Services.ClipboardPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:FastPin.Converters"
        xmlns:models="clr-namespace:FastPin.Models"
        Title="Clipboard Preview" 
        Height="250" Width="350"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        MouseLeave="Window_MouseLeave">
    
    <Border Background="{StaticResource SurfaceBrush}" 
            BorderBrush="{StaticResource PrimaryBrush}" 
            BorderThickness="2" 
            CornerRadius="8" 
            Padding="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="{conv:Localize ClipboardPreview}" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource PrimaryBrush}"
                       Margin="0,0,0,10"/>

            <!-- Content Preview -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="120">
                <Grid>
                    <!-- Text Preview -->
                    <TextBlock Text="{Binding ClipboardPreviewText}" 
                               TextWrapping="Wrap" 
                               FontSize="13"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Visibility="{Binding ClipboardPreviewType, Converter={StaticResource ItemTypeToVisibilityConverter}, ConverterParameter=Text}"/>

                    <!-- Image Preview -->
                    <Grid Visibility="{Binding ClipboardPreviewType, Converter={StaticResource ItemTypeToVisibilityConverter}, ConverterParameter=Image}">
                        <TextBlock Text="[Image Preview]" 
                                   FontSize="13" 
                                   FontStyle="Italic"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Grid>

                    <!-- File Preview -->
                    <Grid Visibility="{Binding ClipboardPreviewType, Converter={StaticResource ItemTypeToVisibilityConverter}, ConverterParameter=File}">
                        <TextBlock Text="[File Preview]" 
                                   FontSize="13" 
                                   FontStyle="Italic"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Grid>

                    <!-- No Content -->
                    <TextBlock Text="{conv:Localize NoClipboardContent}" 
                               FontSize="13" 
                               FontStyle="Italic"
                               Foreground="{StaticResource TextSecondaryBrush}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ClipboardPreviewType}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="{conv:Localize Pin}" 
                        Command="{Binding PinClipboardCommand}"
                        Click="PinButton_Click"
                        Padding="15,6"
                        Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                            <Setter Property="IsEnabled" Value="True"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ClipboardPreviewType}" Value="{x:Null}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="{conv:Localize Discard}" 
                        Command="{Binding DiscardClipboardCommand}"
                        Click="DiscardButton_Click"
                        Style="{StaticResource ModernButtonStyle}"
                        Background="#666666"
                        Padding="15,6"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
