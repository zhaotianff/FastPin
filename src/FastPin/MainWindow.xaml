<Window x:Class="FastPin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FastPin"
        xmlns:vm="clr-namespace:FastPin.ViewModels"
        xmlns:models="clr-namespace:FastPin.Models"
        xmlns:conv="clr-namespace:FastPin.Converters"
        mc:Ignorable="d"
        Title="{conv:Localize AppTitle}" Height="600" Width="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,15">
            <TextBlock Text="FastPin" FontSize="24" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" Padding="15,10" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Row: Search and Action Buttons -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Grid Grid.Column="0" Margin="0,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 FontSize="14">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Escape" Command="{Binding ClearSearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        <TextBlock Grid.Column="0" Text="{conv:Localize SearchPlaceholder}" 
                                   Margin="10,0,0,0" 
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SearchText}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Button Grid.Column="1" Content="✕" 
                                Command="{Binding ClearSearchCommand}"
                                Margin="5,0,0,0" Width="30"
                                Style="{StaticResource ModernButtonStyle}"
                                Visibility="{Binding SearchText, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="{conv:Localize PinText}" Command="{Binding PinTextCommand}" 
                                Style="{StaticResource ModernButtonStyle}" Margin="5,0"/>
                        <Button Content="{conv:Localize PinImage}" Command="{Binding PinImageCommand}"
                                Style="{StaticResource ModernButtonStyle}" Margin="5,0"/>
                        <Button Content="{conv:Localize PinFile}" Command="{Binding PinFileCommand}"
                                Style="{StaticResource ModernButtonStyle}" Margin="5,0"/>
                        <CheckBox IsChecked="{Binding GroupByDate}" 
                                  Content="{conv:Localize GroupByDate}" 
                                  VerticalAlignment="Center"
                                  Margin="15,0,0,0"
                                  FontSize="12"
                                  Style="{StaticResource ModernCheckBoxStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- Second Row: Filters -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Date Picker -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="{conv:Localize FilterByDate}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12"/>
                        <DatePicker SelectedDate="{Binding SelectedDate}" Width="150" FontSize="12" Style="{StaticResource ModernDatePickerStyle}"/>
                    </StackPanel>

                    <!-- Type Filter -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="{conv:Localize FilterByType}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12"/>
                        <ComboBox Width="120" FontSize="12" SelectedValue="{Binding SelectedItemType}" Style="{StaticResource ModernComboBoxStyle}">
                            <ComboBox.Items>
                                <ComboBoxItem Content="{conv:Localize All}" Tag="{x:Null}" IsSelected="True"/>
                                <ComboBoxItem Content="{conv:Localize Text}" Tag="0"/>
                                <ComboBoxItem Content="{conv:Localize Image}" Tag="1"/>
                                <ComboBoxItem Content="{conv:Localize File}" Tag="2"/>
                            </ComboBox.Items>
                            <ComboBox.SelectedValuePath>Tag</ComboBox.SelectedValuePath>
                        </ComboBox>
                    </StackPanel>

                    <!-- Clear Filters Button -->
                    <Button Grid.Column="2" Content="{conv:Localize ClearFilters}" 
                            Command="{Binding ClearFiltersCommand}"
                            Style="{StaticResource ModernButtonStyle}" 
                            Background="#666666"
                            FontSize="12" Padding="10,4"/>

                    <!-- Language Switcher -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="15,0,0,0">
                        <TextBlock Text="{conv:Localize Language}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12"/>
                        <ComboBox Width="100" FontSize="12" SelectedValue="{Binding CurrentLanguage}" SelectedValuePath="Tag" Style="{StaticResource ModernComboBoxStyle}">
                            <ComboBoxItem Content="English" Tag="en-US" IsSelected="True"/>
                            <ComboBoxItem Content="中文" Tag="zh-CN"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid Margin="15">
                <ItemsControl ItemsSource="{Binding GroupedItems}" 
                              Visibility="{Binding GroupByDate, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,20">
                                <!-- Group Header -->
                                <Border Background="{StaticResource BackgroundBrush}" 
                                        Padding="10" Margin="0,0,0,10"
                                        CornerRadius="4">
                                    <TextBlock Text="{Binding DateGroup}" 
                                               FontSize="18" FontWeight="SemiBold"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </Border>
                                
                                <!-- Items in Group -->
                                <ItemsControl ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type vm:PinnedItemViewModel}">
                                            <Border Background="{StaticResource SurfaceBrush}" 
                                                    BorderBrush="{StaticResource BorderBrush}" 
                                                    BorderThickness="1" 
                                                    CornerRadius="6" 
                                                    Padding="15" 
                                                    Margin="0,0,0,10">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                                </Border.Effect>
                                                
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Header with Date and Type -->
                                                    <Grid Grid.Row="0" Margin="0,0,0,10">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding DisplayDate}" 
                                                                   FontSize="12" 
                                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                                        <TextBlock Grid.Column="1" 
                                                                   Text="{Binding Type}" 
                                                                   FontSize="11" 
                                                                   FontWeight="Medium"
                                                                   Padding="6,2"
                                                                   Background="{StaticResource PrimaryBrush}"
                                                                   Foreground="White"/>
                                                    </Grid>

                                                    <!-- Content based on type -->
                                                    <Grid Grid.Row="1">
                                                        <!-- Text Content -->
                                                        <TextBox Text="{Binding TextContent, Mode=OneWay}" 
                                                                 TextWrapping="Wrap" 
                                                                 MaxHeight="200"
                                                                 FontSize="14"
                                                                 Foreground="{StaticResource TextPrimaryBrush}"
                                                                 IsReadOnly="True"
                                                                 BorderThickness="0"
                                                                 Background="Transparent"
                                                                 Visibility="{Binding Type, Converter={StaticResource ItemTypeToVisibilityConverter}, ConverterParameter=Text}"/>

                                                        <!-- Image Content -->
                                                        <Image Source="{Binding ImageSource}" 
                                                               MaxHeight="300" 
                                                               MaxWidth="600"
                                                               Stretch="Uniform"
                                                               HorizontalAlignment="Left"
                                                               Visibility="{Binding Type, Converter={StaticResource ItemTypeToVisibilityConverter}, ConverterParameter=Image}"/>

                                                        <!-- File Content -->
                                                        <StackPanel Visibility="{Binding Type, Converter={StaticResource ItemTypeToVisibilityConverter}, ConverterParameter=File}">
                                                            <TextBlock Text="{Binding FileName}" 
                                                                       FontSize="14" FontWeight="Medium"
                                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                                            <TextBlock Text="{Binding FilePath}" 
                                                                       FontSize="12" 
                                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                                       Margin="0,5,0,0"/>
                                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                                <CheckBox IsChecked="{Binding IsCached}" 
                                                                          Content="{conv:Localize CacheFileLocally}" 
                                                                          VerticalAlignment="Center"
                                                                          Style="{StaticResource ModernCheckBoxStyle}"
                                                                          Checked="CacheCheckBox_Changed"
                                                                          Unchecked="CacheCheckBox_Changed"/>
                                                                <TextBlock Text="{conv:Localize StoresACopy}" 
                                                                           FontSize="11" 
                                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                                           Margin="10,0,0,0" 
                                                                           VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Grid>

                                                    <!-- Tags and Actions -->
                                                    <Grid Grid.Row="2" Margin="0,10,0,0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <!-- Tags -->
                                                        <ItemsControl Grid.Row="0" ItemsSource="{Binding Tags}" Margin="0,0,0,5">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border Background="{StaticResource PrimaryBrush}" 
                                                                            CornerRadius="3" 
                                                                            Padding="8,3" 
                                                                            Margin="0,0,5,5">
                                                                        <TextBlock Text="{Binding}" 
                                                                                   FontSize="11" 
                                                                                   Foreground="White"/>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>

                                                        <!-- Actions -->
                                                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                                            <Button Content="{conv:Localize Copy}" 
                                                                    Command="{Binding DataContext.CopyItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    Style="{StaticResource ModernButtonStyle}"
                                                                    Background="#008272"
                                                                    Padding="10,4"
                                                                    FontSize="12"
                                                                    Margin="0,0,5,0"/>
                                                            <Button Content="{conv:Localize Delete}" 
                                                                    Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    Style="{StaticResource ModernButtonStyle}"
                                                                    Background="#D13438"
                                                                    Padding="10,4"
                                                                    FontSize="12"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Ungrouped View (original) -->
            <ItemsControl ItemsSource="{Binding Items}" 
                          Visibility="{Binding GroupByDate, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:PinnedItemViewModel}">
                        <Border Background="{StaticResource SurfaceBrush}" 
                                BorderBrush="{StaticResource BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="15" 
                                Margin="0,0,0,10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header with Date and Type -->
                                <Grid Grid.Row="0" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding DisplayDate}" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Type}" 
                                               FontSize="11" 
                                               FontWeight="Medium"
                                               Padding="6,2"
                                               Background="{StaticResource PrimaryBrush}"
                                               Foreground="White"/>
                                </Grid>

                                <!-- Content based on type -->
                                <Grid Grid.Row="1">
                                    <!-- Text Content -->
                                    <TextBox Text="{Binding TextContent, Mode=OneWay}" 
                                             TextWrapping="Wrap" 
                                             MaxHeight="200"
                                             FontSize="14"
                                             Foreground="{StaticResource TextPrimaryBrush}"
                                             IsReadOnly="True"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Visibility="{Binding Type, Converter={StaticResource ItemTypeToVisibilityConverter}, ConverterParameter=Text}"/>

                                    <!-- Image Content -->
                                    <Image Source="{Binding ImageSource}" 
                                           MaxHeight="300" 
                                           MaxWidth="600"
                                           Stretch="Uniform"
                                           HorizontalAlignment="Left"
                                           Visibility="{Binding Type, Converter={StaticResource ItemTypeToVisibilityConverter}, ConverterParameter=Image}"/>

                                    <!-- File Content -->
                                    <StackPanel Visibility="{Binding Type, Converter={StaticResource ItemTypeToVisibilityConverter}, ConverterParameter=File}">
                                        <TextBlock Text="{Binding FileName}" 
                                                   FontSize="14" FontWeight="Medium"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding FilePath}" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,5,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <CheckBox IsChecked="{Binding IsCached}" 
                                                      Content="{conv:Localize CacheFileLocally}" 
                                                      VerticalAlignment="Center"
                                                      Style="{StaticResource ModernCheckBoxStyle}"
                                                      Checked="CacheCheckBox_Changed"
                                                      Unchecked="CacheCheckBox_Changed"/>
                                            <TextBlock Text="{conv:Localize StoresACopy}" 
                                                       FontSize="11" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="10,0,0,0" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <!-- Tags and Actions -->
                                <Grid Grid.Row="2" Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Tags -->
                                    <ItemsControl Grid.Row="0" ItemsSource="{Binding Tags}" Margin="0,0,0,5">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource PrimaryBrush}" 
                                                        CornerRadius="3" 
                                                        Padding="8,3" 
                                                        Margin="0,0,5,5">
                                                    <TextBlock Text="{Binding}" 
                                                               FontSize="11" 
                                                               Foreground="White"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Actions -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="{conv:Localize Copy}" 
                                                Command="{Binding DataContext.CopyItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ModernButtonStyle}"
                                                Background="#008272"
                                                Padding="10,4"
                                                FontSize="12"
                                                Margin="0,0,5,0"/>
                                        <Button Content="{conv:Localize Delete}" 
                                                Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ModernButtonStyle}"
                                                Background="#D13438"
                                                Padding="10,4"
                                                FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{conv:Localize HotkeyHint}" 
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                
                <TextBlock Grid.Column="1" 
                           Text="{conv:Localize ClipboardMonitoringActive}" 
                           Foreground="{StaticResource PrimaryBrush}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
